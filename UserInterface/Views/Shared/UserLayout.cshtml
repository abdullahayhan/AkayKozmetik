<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        * {
            margin: 0;
            padding: 0
        }

        body {
            background-color: whitesmoke;
        }

        .name {
            font-size: 16px;
            color: #e83d16 !important;
            font-weight: 500
        }

        .navbar-toggler {
            font-size: 15px
        }

        .nav-link {
            font-size: 14px;
            color: #000 !important;
            font-weight: bold;
            margin-left: 40px
        }

        .form-control {
            height: 32px;
            width: 100%;
            border-radius: 20px;
            color: #c7c6cb;
            font-size: 13px;
            border: none
        }

        .searchitem {
            position: relative
        }

            .searchitem i {
                position: absolute;
                right: 18px;
                top: 10px;
                font-size: 13px
            }

        .text {
            font-size: 23px;
            font-weight: bold
        }

        .imagename {
            font-size: 14px;
            font-weight: bold
        }
    </style>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand name" asp-controller="Home" asp-action="Index">Akay Kozmetik</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="AllProduct">Tüm Ürünler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Contact" asp-controller="Home">İletişim</a>
                        </li> 
                    </ul>
                    <form class="d-flex  searchitem">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <i class="fa fa-search"></i>
                    </form>
                </div>
            </div>
        </nav>
        @RenderBody()
    </div>
    <div class="footer mt-5" style="margin-top: 20rem!important">
        <div class="container1">
            <footer class="py-3 my-4">
                <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                    <li class="nav-item">
                        <a class="navbar-brand name" asp-controller="Home" asp-action="Index">Akay Kozmetik</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-2 text-muted" asp-controller="Home" asp-action="AllProduct">Tüm Ürünler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-2 text-muted" asp-action="Contact" asp-controller="Home">İletişim</a>
                    </li>
                    <li>                
                        <a class="nav-link px-2 text-muted" asp-action="LoginAsAdmin" asp-controller="Home">
                            Admin Girişi
                        </a>
                    </li>
                </ul>
                <p class="text-center text-muted">© @DateTime.Now.Year Akay Kozmetik</p>
            </footer>
        </div>

    </div>
</body>
    </html>

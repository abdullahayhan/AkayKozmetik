@model List<Product>

<section class="section-products" >
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-8 col-lg-6">
                <div class="header">
                    <h2>Ürün Listesi</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Product product in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3" style="width:300px">
                    <div class="single-product" style="border-style: outset; ">
                        <div style="background:url(@product.ImageUrl) no-repeat center; background-size:cover;" class="part-1">
                            <ul>
                                <li><a href="#"><i class="fas fa-shopping-cart"></i></a></li>
                                <li><a href="#"><i class="fas fa-heart"></i></a></li>
                                <li><a href="#"><i class="fas fa-plus"></i></a></li>
                                <li><a href="#"><i class="fas fa-expand"></i></a></li>
                            </ul>
                        </div>
                        <div class="part-2">
                            <h2 class="product-title">@product.Description</h2>
                            <h3 style="font-size: 150%; text-align: center;color: #FF7F00; padding-right: inherit; font-weight: bold ">@product.Price ₺</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>